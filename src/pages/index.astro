---
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav/index.jsx";
import Footer from "../components/Footer/index.jsx";
import heroImage from "../assets/hero-bg.webp";
import { Image } from "astro:assets";
---

<html lang="en">
  <head>
    <MainHead
      title="Barabás Ákos"
      description="Barabás Ákos: Backend, Frontend, DevOps"
    />
    <style lang="scss">
      $w-s: 750px;
      $w-mobile: 500px;

      .hero {
        position: relative;
        overflow: hidden;

        height: 46vw;
      }

      .img {
        display: block;
        width: 100%;
        height: auto;
      }

      .gradient,
      .gradient2 {
        background-image: url("/assets/hero-bg.webp");
        background-size: cover;
        background-position: center;
        pointer-events: none;
        mix-blend-mode: screen;
        width: 100vw;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 2;
      }

      .gradient2 {
        mix-blend-mode: multiply;
        background-size: cover;
      }

      .hero-img {
        position: absolute;
        inset: 0;
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding-left: 2rem;

        @media (min-width: $w-s) {
          padding-left: 4rem;
        }
      }

      .title {
        font-weight: 900;
        font-size: var(--f-u8);
        color: white;
        margin-bottom: 0.5rem;
        margin-top: 0;
        text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.3);

        @media (min-width: $w-s) {
          font-size: var(--f-u12);
        }
      }

      .grid {
        display: grid;
        grid-gap: 2rem;

        @media (min-width: 1200px) {
          grid-template-columns: 2fr 1fr;
        }
      }

      .sectionTitle {
        font-weight: 700;
        font-size: var(--f-u8);
        margin-top: 4rem;
        margin-bottom: 2rem;
      }

      .role {
        position: relative;
        display: inline-block;
        font-weight: 900;
        color: var(--t-bg);
        background-color: var(--t-fg);
        padding: 0.25em 0.5em;
        z-index: 2;

        &:hover {
          cursor: pointer;
        }

        @media (min-width: $w-s) {
          font-size: var(--f-u3);
        }

        + .role {
          margin-left: 1em;
        }

        &:nth-of-type(1) {
          .invert {
            background-color: var(--c-pink);
          }
        }

        &:nth-of-type(2) {
          .invert {
            background-color: var(--c-blue);
          }
        }

        &:nth-of-type(3) {
          .invert {
            background-color: var(--c-green);
          }
        }

        &:hover {
          .invert {
            clip-path: polygon(0% 0%, 5% 0%, 100% 100%, 0% 100%);
          }
        }
      }

      .invert {
        position: absolute;
        color: var(--t-fg);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        clip-path: polygon(100% 100%, 100% 100%, 100% 200%, 0% 200%);
        transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
      }

      .desc {
        font-size: var(--f-u2);
        margin-top: 1.5rem;
        color: white;
        margin-bottom: 0;
      }

      .subtitle {
        display: block;
        font-weight: 400;
        font-size: var(--f-d6);
        letter-spacing: -0.0625em;
      }

      .center {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40%;
        @media (max-width: 600px) {
          width: 90%;
        }
      }
      .bio {
        line-height: 2;
        margin-bottom: 2rem;

        > span:first-of-type {
          line-height: 1;
          margin-bottom: 0.5em;
          display: block;
          font-weight: 700;
          font-size: var(--f-u4);
        }
      }
    </style>
  </head>
  <body>
    <Nav />
    <main class="hero">
      <Image
        class="hero-img"
        src={heroImage}
        alt="Background image of Barabas Akos"
      />
      <div class="overlay">
        <h1 class="title">Barabás Ákos</h1>
        <div>
          <span class="role"
            >Developer<span class="invert">Developer</span>
          </span>&nbsp;
          <span class="role"
            >Freelancer<span class="invert">Freelancer</span>
          </span>&nbsp;
          <span class="role"
            >Consultant<span class="invert">Consultant</span></span
          >
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
